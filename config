set $mod Mod4
set $alt Mod1

set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $browser chromium
set $explorer pcmanfm

set $monitor1 DP-1
set $monitor2 DVI-D-1

# settings
mouse_warping none
workspace_auto_back_and_forth yes
floating_modifier $mod normal

hide_edge_borders none
default_border pixel 1
default_floating_border pixel 1

# set wallpaper
output * bg ~/wallpapers/japanese-castle-cherry-blossom-mountain-digital-art-scenery.jpg fill

# i3-gaps
gaps outer 0
gaps inner 10
smart_gaps off

workspace 3 gaps inner 0
workspace 3 gaps outer 0

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

for_window [class="Pavucontrol"] floating enable
for_window [class="gnome-calculator"] floating enable
for_window [class="Gcolor3"] floating enable
for_window [class="vlc"] floating enable

output 2monitor1 resolution 2560x1440@143.972000Hz

# keyboard settings
input * {
  xkb_layout "de(nodeadkeys)"
  xkb_options "grp:win_space_toggle"
  xkb_numlock "enabled"
}
bindsym $mod+Shift+q kill
bindsym $mod+Shift+r reload

bindsym $mod+Return exec $term
bindsym $mod+g exec $browser

# application launcher
bindsym $mod+d exec rofi -show drun

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
